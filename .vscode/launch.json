{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "kill-and-build",
            "postDebugTask": "open-browser",
            "program": "${workspaceFolder}/OptimalyTemplate.PresentationLayer/bin/Debug/net9.0/OptimalyTemplate.PresentationLayer.dll",
            "args": ["--urls", "http://localhost:5020"],
            "cwd": "${workspaceFolder}/OptimalyTemplate.PresentationLayer",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_DETAILEDERRORS": "true",
                "ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS": "true"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}